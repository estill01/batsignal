<div class="navbar"> 
  <div class="navbar-inner">
    <div class="container">
      <%= link_to 'Agendo', current_user ? user_path(current_user) : root_path, :class=>"brand" %>

      <ul class="nav">
        <li class="divider-vertical logo"></li>
        <% if logged_in? %>
        <li><%= link_to "New Agenda", users_path %></li>
        <li><%= link_to "Call Pool", users_path %></li>
        <li><%= link_to "Browse Users", users_path %></li>
        <% else %>
          <li><%= link_to "About", root_path %></li>              <li class="divider-vertical logo"></li>
          <li><%= link_to "Download our App", root_path %></li>   <li class="divider-vertical logo"></li>
          <li><%= link_to "API", root_path %></li>                <li class="divider-vertical logo"></li>
          <li><%= link_to "Contact", root_path %></li>            <li class="divider-vertical logo"></li>
          <% if request.fullpath == root_path or request.fullpath == signup_path %>
            <li><%= link_to "Log in", login_path%></li>         <li class="divider-vertical logo"></li>
          <% else %>
            <li><%= link_to "Sign up", signup_path%></li>         <li class="divider-vertical logo"></li>
          <% end %>
        <% end %>
      </ul>

      <div id="navbar-user-menu" class="pull-right">
        <% if logged_in? %>
          <ul>
            <li class="dropdown">
              <%= link_to(image_tag(current_user.avatar_url(:nav), :id => "nav-avatar"), '#', :class => "dropdown-toggle", 'data-toggle' => "dropdown")%>
            <ul class="dropdown-menu">
              <li>
                <%= link_to("Edit profile", edit_user_path(current_user)) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to("Log out", logout_path) %>
              </li>
            </ul>
            </li>
          </ul>
        <% end %>
      </div>

  </div>
</div>
