<div id="user-#{user.id}" class="user-item">
  <div id="user-item-details">
    <%= link_to(user.username, user_path(user)) %><br/>
  </div>
  <div id="user-item-avatar">
      <% if user.avatar_url == '/images/fallback/default.jpg' %>
        <%= link_to(image_tag('./fallback/default.jpg'), user_path(user)) %>
      <% else %>
        <%= link_to(image_tag(user.avatar_url), user_path(user)) %>
      <% end %>
  </div>
</div>


